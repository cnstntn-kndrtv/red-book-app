<?xml version='1.0' encoding='utf-8'?>
<widget id="one.kloud.rusbook" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RusRedBook</name>
    <description>
        Red book of russian words.
    </description>
    <author email="dev@digt.ru" href="http://rusredbook.ru">
        Constantin Kondratyev
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="22" />
        <icon density="ldpi" src="www/icon/ldpi.png" />
        <icon density="mdpi" src="www/icon/mdpi.png" />
        <icon density="hdpi" src="www/icon/hdpi.png" />
        <icon density="xhdpi" src="www/icon/xhdpi.png" />
        <icon density="xxxhdpi" src="www/icon/xxxhdpi.png" />
        <splash density="port-ldpi" src="www/splashscreen/portrait-ldpi.png" />
        <splash density="port-mdpi" src="www/splashscreen/portrait-mdpi.png" />
        <splash density="port-hdpi" src="www/splashscreen/portrait-hdpi.png" />
        <splash density="port-xhdpi" src="www/splashscreen/portrait-xhdpi.png" />
        <splash density="port-xxxhdpi" src="www/splashscreen/portrait-xxxhdpi.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="FadeSplashScreen" value="true" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
